<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y440"
        android:background="@drawable/bg_club_talk_background">

        <ImageView
            android:id="@+id/iv_user_9"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/y176"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y84"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x44"/>

        <ImageView
            android:id="@+id/iv_user_8"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/y176"
            android:layout_toEndOf="@+id/iv_user_7"
            android:layout_marginStart="@dimen/x8"
            android:layout_alignTop="@+id/iv_user_7"/>

        <ImageView
            android:id="@+id/iv_user_7"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/y176"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y120"
            android:layout_marginStart="@dimen/x256"/>

        <ImageView
            android:id="@+id/iv_user_6"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/y176"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y84"
            android:layout_marginStart="@dimen/x76"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y24"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user_5"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y176" />

            <ImageView
                android:id="@+id/iv_user_4"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y176"
                android:layout_marginStart="@dimen/x8"/>

            <ImageView
                android:id="@+id/iv_user_3"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y176"
                android:layout_marginStart="@dimen/x8"/>

            <ImageView
                android:id="@+id/iv_user_2"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y176"
                android:layout_marginStart="@dimen/x8"/>

            <ImageView
                android:id="@+id/iv_user_1"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y176"
                android:layout_marginStart="@dimen/x8"/>
        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>
</LinearLayout>