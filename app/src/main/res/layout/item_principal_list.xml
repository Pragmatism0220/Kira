<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="22dp"
    android:paddingRight="22dp">

    <ImageView
        android:id="@+id/image_plot_item_bg"
        android:layout_width="332dp"
        android:layout_height="75dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY"
        android:background="@drawable/bg_home_plot_detail_paper"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x14">

        <ImageView
            android:id="@+id/image_plot_detail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_number" />

        <TextView
            android:id="@+id/text_plot_detail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rotation="-17"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_plot_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="56dp"
        android:text="[意外的惊喜]"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_plot_detail_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:src="@drawable/selector_plot_play" />


    <LinearLayout
        android:id="@+id/container_plot_extra_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_plot_item_bg"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="-35dp"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>