<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">

        <ImageView
            android:id="@+id/image_plot_item_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:background="@drawable/bg_home_plot_detail_paper"
            android:scaleType="fitXY" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20">

            <ImageView
                android:id="@+id/image_plot_detail_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_number" />

            <TextView
                android:id="@+id/text_plot_detail_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rotation="-17"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </FrameLayout>


        <TextView
            android:id="@+id/text_plot_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/frameLayout"
            android:text="[意外的惊喜]"
            android:textColor="@color/black"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_plot_detail_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/x48"
            android:src="@drawable/selector_plot_play" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_plot_extra_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x14"
        android:layout_marginTop="@dimen/y110"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <RelativeLayout
            android:id="@+id/cg_item_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x10"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/image_ext_icon_image_one"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/y110"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/cg_item_one_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_home_plot_detail_paperclip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cg_item_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x10"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/image_ext_icon_image_two"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/y110"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/cg_item_one_info_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_home_plot_detail_paperclip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cg_item_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x10"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/image_ext_icon_image_three"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/y110"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/cg_item_one_info_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_home_plot_detail_paperclip" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>