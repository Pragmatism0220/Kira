<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_e8e8e8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/gray_e8e8e8"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/x100"
        android:paddingRight="@dimen/x100"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/x24"
        android:visibility="gone" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_share_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x36"
            android:layout_marginTop="@dimen/y36"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menu_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_doc_option_send_qq" />

            <TextView
                android:id="@+id/tv_text_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="QQ"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/x20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qqZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x24"
            android:layout_marginTop="@dimen/y36"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menu_qqzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_doc_option_send_qzone" />

            <TextView
                android:id="@+id/tv_text_qqZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="QQ空间"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/x20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x24"
            android:layout_marginTop="@dimen/y36"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menu_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_doc_option_send_wechat" />

            <TextView
                android:id="@+id/tv_text_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="微信"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/x20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pyq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x24"
            android:layout_marginTop="@dimen/y36"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menu_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_doc_option_send_pengyouquan" />

            <TextView
                android:id="@+id/tv_text_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="微信朋友圈"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/x20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x24"
            android:layout_marginTop="@dimen/y36"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menu_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_doc_option_send_weibo" />

            <TextView
                android:id="@+id/tv_text_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="微博"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/x20" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y24"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/label_cancel"
        android:textColor="@color/black_1e1e1e"
        android:textSize="@dimen/x32" />
</LinearLayout>