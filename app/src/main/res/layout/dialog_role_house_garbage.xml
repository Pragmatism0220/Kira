<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_role_juqing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/alpha_60"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_gongxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_cover_next"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y28"
        android:src="@drawable/ic_garbage_get_prosit" />

    <ImageView
        android:id="@+id/iv_cover_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_garbage_background_1" />

    <TextView
        android:id="@+id/tv_reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="@dimen/x48"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_juqing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cover_next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y24"
        android:textColor="@color/white"
        android:textSize="@dimen/x20"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_juqing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y40"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_phone_garbage"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x40"
            android:layout_toEndOf="@+id/tv_left"
            android:background="@drawable/btn_phone_garbage"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>