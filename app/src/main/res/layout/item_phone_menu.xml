<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:background="@drawable/btn_white_border_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x64"
            android:layout_height="@dimen/y64"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x24" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x24"
            android:layout_toEndOf="@+id/iv_avatar"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_1e1e1e"
            android:textSize="@dimen/x30" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x20"
            android:layout_toEndOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x24"
            android:textColor="@color/yellow_f2cc2c"
            android:textSize="@dimen/x30"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x24"
            android:background="@drawable/ic_image_checkbox"
            android:button="@null"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/gray_e8e8e8" />
</LinearLayout>