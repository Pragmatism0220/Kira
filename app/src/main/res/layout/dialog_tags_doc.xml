<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x420"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_rect_corner_white_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y24"
        android:text="添加标签"
        android:textColor="@color/main_cyan" />

    <EditText
        android:id="@+id/et_floor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginEnd="@dimen/x16"
        android:layout_marginStart="@dimen/x16"
        android:layout_marginTop="@dimen/y24"
        android:ellipsize="end"
        android:maxLength="15"
        android:maxLines="1"
        android:padding="@dimen/x8"
        android:textColor="@color/main_cyan"
        android:textSize="@dimen/x28" />

    <View
        android:layout_width="@dimen/x420"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y25"
        android:background="@color/gray_e8e8e8" />

    <LinearLayout
        android:layout_width="@dimen/x420"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/label_cancel"
            android:textColor="@color/main_cyan" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y6"
            android:layout_marginTop="@dimen/y6"
            android:layout_weight="0"
            android:background="@color/gray_e8e8e8" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="添加"
            android:textColor="@color/main_cyan" />
    </LinearLayout>
</LinearLayout>