<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/fl_map_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white_e6" />

    <LinearLayout
        android:id="@+id/ll_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_below="@+id/top_view"
        android:background="@color/white_95"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/y26"
            android:background="@color/transparent"
            android:src="@drawable/btn_association" />

        <LinearLayout
            android:id="@+id/rl_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/y26"
            android:layout_weight="1"
            android:background="@drawable/shape_tool_bar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_personal"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/y64"
                android:src="@drawable/bg_default_circle" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/y24"
                android:layout_weight="1"
                android:gravity="center"
                android:text="搜索你感兴趣的"
                android:textColor="@color/white"
                android:textSize="@dimen/x30" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/y24"
                android:src="@drawable/btn_trends_search_white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/y26"
            android:layout_marginStart="@dimen/y26"
            android:background="@color/transparent"
            android:src="@drawable/btn_map" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/visitor_info"
        android:layout_width="@dimen/x350"
        android:layout_height="@dimen/y60"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y20"
        android:background="@drawable/black_round_bg">

        <com.moemoe.lalala.view.widget.view.PileView
            android:id="@+id/pile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x20"
            ></com.moemoe.lalala.view.widget.view.PileView>

        <TextView
            android:id="@+id/visitor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/pile_layout"
            android:text="   访客数:"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/visitor_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/visitor_title"
            android:text="00"
            android:textColor="@color/white" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dormitory_storage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_storage_box_selector" />

            <Button
                android:id="@+id/dormitory_role"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_role_selector" />

            <Button
                android:id="@+id/dormitory_drama"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_drama_selector" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>




