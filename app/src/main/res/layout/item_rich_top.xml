<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:layout_marginBottom="@dimen/y24"
            android:layout_marginEnd="@dimen/x36"
            android:layout_marginStart="@dimen/x36"
            android:layout_marginTop="@dimen/y24"
            android:src="@drawable/shape_dash_gray_d7d7d7" />

        <LinearLayout
            android:id="@+id/tv_add_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="添加封面图"
                android:textColor="@color/gray_d7d7d7"
                android:textSize="@dimen/x30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="(默认将会用正文第一张图)"
                android:textColor="@color/gray_d7d7d7"
                android:textSize="@dimen/x20" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:background="@color/gray_e8e8e8" />

    <RelativeLayout
        android:id="@+id/rl_title_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y108"
        android:paddingEnd="@dimen/x36"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:paddingStart="@dimen/x36">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/label_edit_doc_hint"
            android:singleLine="true"
            android:textColor="@color/black_1e1e1e"
            android:textColorHint="@color/gray_d7d7d7"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/ev_title_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="30"
            android:textColor="@color/gray_d7d7d7"
            android:textSize="@dimen/x24" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:background="@color/gray_e8e8e8" />
</LinearLayout>