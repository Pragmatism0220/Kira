<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y90">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/x24"
            android:paddingEnd="@dimen/x24"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/x36"
            android:textColor="@color/black_1e1e1e"/>

        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="@dimen/y84"
            android:layout_height="@dimen/y84"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/y24"
            android:src="@drawable/btn_music_player_playlist_delete" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_e8e8e8"/>

</LinearLayout>