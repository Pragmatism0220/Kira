<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/iv_cover_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/x264"
            android:layout_height="@dimen/y264"
            android:layout_marginTop="@dimen/y20"
            />
        <ImageView
            android:id="@+id/cloth_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_new_mini"
            android:layout_gravity="center_horizontal|bottom"
            android:visibility="gone"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_cover_root"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_home_roleschoice_current"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cover_root"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_cover_root"
        android:layout_alignEnd="@+id/iv_cover_root"
        android:layout_marginEnd="@dimen/x20"
        android:src="@drawable/ic_home_roleschoice_select"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_tab_msg_dot"
        android:layout_width="@dimen/y30"
        android:layout_height="@dimen/y30"
        android:layout_alignEnd="@+id/tv_tab_title"
        android:layout_gravity="end"
        android:layout_marginEnd="-9dp"
        android:layout_marginTop="@dimen/y5"
        android:background="@drawable/shape_dot_y18"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/y16"
        android:visibility="gone" />
</RelativeLayout>