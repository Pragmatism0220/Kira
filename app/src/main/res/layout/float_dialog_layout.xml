<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_dialog"
    android:layout_width="@dimen/x428"
    android:layout_height="@dimen/y320"
    android:background="@drawable/bg_classmate_talkbg_bottom_left"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginTop="@dimen/y68"
        android:ellipsize="none"
        android:maxLines="5"
        android:textColor="@color/white"
        android:textSize="@dimen/x24"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/rl_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y200"
        android:layout_marginEnd="@dimen/x56"
        android:layout_marginStart="@dimen/y56"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/btn_talkbg_classmate"
            android:gravity="center"
            android:paddingBottom="@dimen/y2"
            android:paddingTop="@dimen/y2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_left"
            android:layout_weight="1"
            android:background="@drawable/btn_talkbg_classmate"
            android:gravity="center"
            android:paddingBottom="@dimen/y2"
            android:paddingTop="@dimen/y2"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>