<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x56"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_main_no_background_stroke_2_corner_5"
        android:gravity="center"
        android:maxLines="1"
        android:paddingEnd="@dimen/x34"
        android:paddingStart="@dimen/x34" />

    <TextView
        android:id="@+id/tv_tab_msg_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_tab_title"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>