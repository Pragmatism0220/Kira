<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x332"
        android:layout_height="@dimen/y438"
        android:background="@drawable/ic_home_plot_paper">

        <RelativeLayout
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y400"
            android:layout_marginBottom="@dimen/y28"
            android:layout_marginEnd="@dimen/x16"
            android:layout_marginStart="@dimen/x16"
            android:layout_marginTop="@dimen/y10">

            <ImageView
                android:id="@+id/item_photo"
                android:layout_width="@dimen/x300"
                android:layout_height="@dimen/y400"
                android:layout_centerInParent="true" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/item_bottom_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_plot_paper_finish" />

                <TextView
                    android:id="@+id/item_bottom_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/y30"
                    android:rotation="-15"
                    android:text="真是懒惰的夏日呢~"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x26" />
            </FrameLayout>


        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_bottom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y8"
        android:text="第一章 夏日将至"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_bottom_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y4"
        android:text="参与人次：2421"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:visibility="gone"
        />


</LinearLayout>