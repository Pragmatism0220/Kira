<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll"
    >

    <FrameLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <CheckBox
            android:id="@+id/item_commodity_check_btn"
            android:layout_width="@dimen/x156"
            android:layout_height="@dimen/x156"
            android:background="@drawable/storage_commodity_selector_bg"
            android:button="@null"
            />

        <ImageView
            android:id="@+id/item_commodity_image"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/y130"
            android:layout_gravity="center"
            android:src="@drawable/test_image" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y12"
        android:text="次元币"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_commodity_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y8"
        android:text="数量：24"
        android:textColor="@color/black"
        android:textSize="10dp" />

</LinearLayout>